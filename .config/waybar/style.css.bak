* {
  font-family: BlexMono Nerd Font;
  font-size: 14px;
  font-weight: bolder;
}

window#waybar {
  background-color: #45403d;
}

tooltip {
  background: #45403d;
  border-radius: 10px;
}

tooltip label {
  color: #ebdbb2;
}

/* Modules Left */
#workspaces button {
  color: #d4be98;
  border-radius: 0px;
}

#workspaces button.active {
  color: #ebdbb2;
  background-color: #7daea3;
}

#workspaces button:hover {
  color: #45403d;
  background: #d4be98;
  border-color: #d4be98;
  box-shadow: none;
  text-shadow: #d4be98;
}

/* Modules Center */
#clock {
  color: #d4be98;
  font-weight: bolder;
}

/* Modules Right */
#cpu {
  color: #a9b665;
  padding-left: 0.5em;
  padding-right: 0.5em;
}

#memory {
  color: #a9b665;
  padding-left: 0.5em;
  padding-right: 0.5em;
}

#disk {
  color: #a9b665;
